{
  "identifier": "desktop-capability",
  "platforms": [
    "macOS",
    "windows",
    "linux"
  ],
  "windows": [
    "main"
  ],
  "permissions": [
    "window-state:default",
    "global-shortcut:default",
    "dialog:default",
    "fs:default",
    {
      "identifier": "fs:allow-rename",
      "allow": [{ "path": "$HOME/*" }]
    },
    {
      "identifier": "fs:allow-rename",
      "allow": [{ "path": "$HOME/**/*" }]
    }
  ]
}